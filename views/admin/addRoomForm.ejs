<% layout('layouts/boilerplate') -%>
<div class=" col-10 offset-1 offset-md-3 col-md-6">
  <h2 class="mb-3">Add Room</h2>
  <hr>
  <form action="/admin/<%= id %>/add-room" method="POST" class="grid">
    <div class="row mt-3">
      <div class="col-md-4">
        <label class="form-label" for="highlight">Highlight</label>
        <input
          type="text"
          id="highlight"
          class="form-control"
          name="room[highlight]"
          placeholder="Luxury/Delux...."
          required
        />
      </div>
      <div class="col-md-4">
        <label class="form-label" for="roomType">Air conditioning</label>
        <select name="room[ac]" id="roomType" class="form-select">
          <option value="true">A/C</option>
          <option value="false">Non A/C</option>
        </select>
      </div>
      <div class="col-md-4">
        <label class="form-label" for="maxcapacity">Guests</label>
        <input
          type="number"
          id="maxcapacity"
          class="form-control"
          name="room[maxCapacity]"
          placeholder="Max Capacity"
          required
        />
      </div>
    </div>
    <div class="mt-3">
      <label class="form-label" for="price">Price</label>
      <input
        type="number"
        id="price"
        class="form-control"
        name="room[price]"
        placeholder="Price"
        required
      />
    </div>
    <div class="mt-3 d-flex flex-wrap justify-content-between">
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="checkbox"
          id="inlineCheckbox1"
          name="room[amenities]"
          value="wifi"
        />
        <label class="form-check-label" for="inlineCheckbox1">Wifi</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="checkbox"
          name="room[amenities]"
          id="inlineCheckbox1"
          value="tv"
        />
        <label class="form-check-label" for="inlineCheckbox1">TV</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="checkbox"
          name="room[amenities]"
          id="inlineCheckbox1"
          value="kichen"
        />
        <label class="form-check-label" for="inlineCheckbox1">Kichen</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="checkbox"
          name="room[amenities]"
          id="inlineCheckbox1"
          value="meal"
        />
        <label class="form-check-label" for="inlineCheckbox1">Meal</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="checkbox"
          name="room[amenities]"
          id="inlineCheckbox1"
          value="pickup"
        />
        <label class="form-check-label" for="inlineCheckbox1">Pick up</label>
      </div>
    </div>
    <button class="btn btn-dark mt-3" type="submit">Add New One</button>
  </form>
</div>
