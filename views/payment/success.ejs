<% layout('layouts/boilerplate') -%>
<link rel="stylesheet" href="/css/success.css">
<div class="container">
  <div class="success-card">
      <div class="success-header">
          <div class="success-icon">
              <i class="fas fa-check-circle"></i>
          </div>
          <h1>Booking Confirmed!</h1>
          <p>Your payment has been processed successfully</p>
      </div>
      
      <div class="success-content">
          <p>Thank you for choosing Us. We have received your payment and your booking is now confirmed. A confirmation email has been sent to <strong>your registered email address</strong>.</p>
          <p>Payment id : <%= payment.payment_id %></p>
          <div class="actions">
              <a href="/listing" class="btn secondary-btn">Back to My Bookings</a>
          </div>
      </div>
  </div>
</div>
