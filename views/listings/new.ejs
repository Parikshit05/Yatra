<% layout("layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2 mt-3">
    <h3>Create a new Listing</h3>
    <br />
    <form
      action="/listings"
      method="POST"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
